<!DOCTYPE html>
<html>
<head>
    <title><%= operation %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/style.css'/>
</head>
<body>
<div class="backdrop-blur-lg md:backdrop-blur-0 w-screen min-h-screen flex flex-wrap flex-row">
    <%- include('header', {name: operation, tableName: undefined}); %>
    <% tables.forEach((table) => { %>
        <a href="/<%= operation.toLowerCase() %>/<%= table %>" class="card">
            <h5 class="card__title"><%= table %></h5>
        </a>
    <% }); %>
</div>
</body>
</html>
