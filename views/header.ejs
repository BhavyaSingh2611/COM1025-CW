<div class="flex flex-col justify-between header mb-4 md:flex-row">
    <div class="flex flex-row items-center mb-6 md:mb-0">
        <button onclick="history.back()">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                 stroke="currentColor"
                 class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18"/>
            </svg>
        </button>
        <h1 class="mb-0 ml-4 header__title"><%= name %></h1>
    </div>
    <div class="flex flex-row items-center">
        <a href="/"
           type="button"
           class="header__button">
            Home
        </a>
        <a href="/create<%= tableName ? `/${tableName}` : "" %>"
           type="button"
           class="header__button">
            Create
        </a>
        <a href="/view<%= tableName ? `/${tableName}` : "" %>"
           type="button"
           class="header__button">
            View
        </a>
        <a href="/delete<%= tableName ? `/${tableName}` : "" %>"
           type="button"
           class="header__button">
            Delete
        </a>
    </div>
</div>
